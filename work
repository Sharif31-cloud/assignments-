list_of_friends   = ['sharif','ema','xean','daudi']
def friends():
  
    print(f"my friends are {list_of_friends}")
   
    print(f"my best friend is {list_of_friends[0]}")
    
    print(f"my least important friends are {list_of_friends[1]} and {list_of_friends[3]}")
list_of_friends.extend(['ada','aba','james'])
list_of_friends.pop(0)
print(f"my friends are {list_of_friends}")
friends()


list_of_domestic_animals = ['cow','sheep','goat']
list_of_wild_animals = ['lion','tiger','leopard']

def animals():
    print(f"this is a list of wild animals ,{list_of_wild_animals}")
    print(f"this is a list of domestic animals ,{list_of_domestic_animals}")
    merged_list = list_of_domestic_animals + list_of_wild_animals
    print(merged_list)
    list_of_wild_animals.extend(['giraffe','buffallow'])
    print(f"this is a list of wild animals ,{list_of_wild_animals}")


animals()
